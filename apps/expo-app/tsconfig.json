{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "../../packages/shared/assets/*",
        "./assets/*"
      ],
      "@components/*": [
        "../../packages/components/*"
      ],
      "@hooks/*": [
        "../../packages/hooks/*"
      ],
      "@screens/*": [
        "../../packages/screens/*"
      ],
      "@shared/*": [
        "../../packages/shared/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}